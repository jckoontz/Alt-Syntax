V[tns=pret,num=pl,pers=1,val=1,mood=indic,type=volition,aspect=perfective] -> 'quisimos' | 'necesitamos' | 'exijimos' | 'demandamos' | 'sugerimos' | 'esperamos' | 'pedimos'
V[tns=pret,num=pl,pers=2,val=1,mood=indic,type=volition,aspect=perfective] -> 'quisisteis' | 'necesitasteis' | 'exigisteis' | 'demandasteis' | 'sugeristeis' | 'esperasteis' | 'pedisteis'
