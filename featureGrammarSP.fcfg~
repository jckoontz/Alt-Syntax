% start CP
# ############################

# Grammar Rules
# ############################
CP[mood=?m] -> Cbar[mood=?m] 
Cbar[mood=?m] -> IP[+TNS,mood=?m]

IP[+TNS,mood=?m] -> DP[num=?n,pers=?p,case=nom] VP[num=?n,pers=?p,mood=?m,conj=fin] | VP[num=?n,pers=?p,tns=?t,type=?t, mood=imperative] | VP[num=?n,pers=?p,mood=?m] | Conj IP[+TNS,mood=?m] | DP[num=?n,pers=?p,case=nom] AUX[tns=?t,mood=?m] VP[num=?n,pers=?p,mood=?m]


DP[num=?n,pers=?p,case=?k] ->  Dbar[num=?n,pers=?p,case=?k]
Dbar[num=?n,pers=?p] -> D[num=?n,DEF=?d,COUNT=?c] NP[num=?n,pers=?p,DEF=?d,COUNT=?c]
Dbar[num=?n,pers=?p] -> NP[num=?n,pers=?p,DEF=?d,COUNT=?c]
Dbar[num=?n,pers=?p,case=?k] -> D[num=?n,pers=?p,+DEF,type=pron,case=?k]
NP[num=?n,pers=?p,COUNT=?c] -> N[num=?n,pers=?p,type=prop,COUNT=?c]
VP[num=?n,pers=?p,tns=?t,mood=?m,type=?t,conj=?c] -> V[num=?n,pers=?p,val=1,tns=?t,mood=?m,type=?t,conj=?c] 
VP[num=?n,pers=?p,tns=?t,mood=?m,type=?t,conj=?c] -> V[num=?n,pers=?p,val=1,tns=?t,mood=?m,type=volition,conj=?c] CP[mood=subjunctive]
VP[num=?n,pers=?p,tns=?t,mood=?m,type=?t,conj=?c] -> V[num=?n,pers=?p,val=2,tns=?t,mood=?m,conj=?c] DP[case=acc] 
VP[num=?n,pers=?p,tns=?t,mood=?m,type=?t,conj=?c] -> V[num=?n,pers=?p,val=2,tns=?t,mood=?m,conj=?c] VP[num=?n,pers=?p,tns=?t,mood=?m]
VP[num=?n,pers=?p,tns=?t,mood=?m,type=?t,conj=?c] -> AUX[tns=?t,mood=?m,conj=?c] VP[tns=?t,conj=part]
#VP[num=?n,pers=?p,tns=?t,type=?t, mood=imperative] -> V[num=?n,pers=?p,val=1,tns=?t,mood=?m,type=imerative,conj=?c]
VP[num=?n,pers=?p,tns=?t,mood=?m,conj=?c] -> V[tns=?t,type=?t,conj=?c,+PREP] PP[case=dat]
PP[case=?c] -> PREP[case=?c] NP[num=?n,pers=?p,COUNT=?c]
VP[num=?n,pers=?p,tns=?t,mood=?m,conj=?c] -> V[tns=?t,type=part,conj=?c] ADV[-NEG] 
VP[num=?n,pers=?p,tns=?t,mood=?m,conj=?c] -> V[tns=pret,num=sg,pers=1,val=1,mood=indic,conj=?c] VP[num=?n,pers=?p,tns=?t, type=?t,conj=?c]
VP[num=?n,pers=?p,tns=?t,mood=?m,conj=?c] -> V[num=?n,pers=?p,val=1,conj=infinitive]
VP[num=?n,pers=?p,tns=?t,mood=?m,conj=?c] -> MOD[tns=?t,mood=?m] VP[conj=?c,mood=?m]

#VP[num=?n,pers=?p,tns=?t,mood=?m] -> Conj VP[num=?n,pers=?p,tns=?t,mood=?m,type=?t]
VP[num?=n,pers=?p,val=2,type=?t,mood=?m] -> V[num=?n,pers=?p,val=2,type=?t,mood=?m] Cbar[stype=decl,type=?t]
VP[num=?n,pers=?p,tns=?t,type=?t,mood=?m] -> V[num=?n,pers=?p,val=1,tns=?t,type=?t,mood=imperative] | AdvP V[num=?n,pers=?p,val=1,tns=?t,type=?t,mood=imperative] AdvP | V[num=?n,pers=?p,val=1,tns=?t,type=?t,mood=imperative] AdvP

#Cbar[stype=decl,type=reg] -> Comp IP[+TNS]
#Cbar[stype=decl,type=doubt] -> IN IP[+TNS]
#Cbar[stype=decl,type=wish,val=2] -> TO VP[tns=fut]
AdvP[type=?t] -> ADV[-NEG] | ADV[+NEG] | ADV[type=place]

# ############################
# Lexical Rules
# ############################
D[-DEF,+COUNT,num=sg] -> 'un' | 'una'
D[+DEF] -> 'este' | 'esta'
D[+DEF,gen=n,num=sg,case=nom,type=pron] -> 'yo'
D[+DEF,gen=n,num=sg,case=nom,type=pron] -> 'tú' | 'vos'
D[+DEF,gen=f,num=sg,case=nom,type=pron] -> 'ella'
D[+DEF,gen=f,num=pl,case=nom,type=pron] -> 'ellas'
D[+DEF,gen=m,num=sg,case=nom,type=pron] -> 'él'
D[+DEF,gen=m,num=pl,case=nom,type=pron] -> 'ellos'
D[+DEF,gen=n,num=sg,case=nom,type=pron] -> 'lo' | 'ello'
D[+DEF,gen=m,num=pl,case=nom,type=pron] -> 'vosotros'
D[+DEF,gen=f,num=pl,case=nom,type=pron] -> 'vosotras'
D[+DEF,gen=n,num=pl,case=nom,type=pron] -> 'nosotros'
D[+DEF,gen=n,num=pl,case=nom,type=pron] -> 'nosotras'
D[+DEF,gen=n,num=sg,case=dat,type=pron] -> 'le' | 'les' | 'se'
N[num=sg,pers=3,type=prop] -> 'Juan' | 'Maria' | 'Pedro' | 'Iñaki' | 'Lorea' | 'Jordan' | 'Isabela' | 'Osasuna' | 'Barcelona'  
#N[num=sg,pers=2,type=fam] -> 'tú' | 'vos'

#Pres
V[tns=pres,num=sg,pers=n,val=1,mood=indic,type=volition,aspect=imperfective] -> 'ojalá'
V[tns=pres,num=sg,pers=1,val=1,mood=indic,type=volition,aspect=imperfective] -> 'quiero' | 'necesito' | 'exijo' | 'demando' | 'sugiero' | 'espero' | 'pido'
V[tns=pres,num=sg,pers=2,val=1,mood=indic,type=volition,aspect=imperfective] -> 'quieres' | 'querés' | 'necesitas' | 'necesitás'| 'exiges' | 'exigís' | 'demandas' | 'demandás' | 'sugieres' | 'sugerís' | 'esperas' | 'esperás' | 'pides' | 'pedís'
V[tns=pres,num=sg,pers=3,val=1,mood=indic,type=volition,aspect=imperfective] -> 'quiere' | 'necesita' | 'exige' | 'demanda' | 'sugiere' | 'espera' | 'pide'
V[tns=pres,num=sg,pers=3,val=1,mood=indic,type=volition,aspect=imperfective] -> 'quiere' | 'necesita' | 'exige' | 'demanda'	| 'sugiere' | 'espera' | 'pide'
V[tns=pres,num=pl,pers=1,val=1,mood=indic,type=volition,aspect=imperfective] -> 'queremos' | 'necesitamos' | 'exigimos' | 'demandamos' | 'sugerimos' | 'esperamos' | 'pedimos'
V[tns=pres,num=pl,pers=2,val=1,mood=indic,type=volition,aspect=imperfective] -> 'queréis' | 'necesitáis' | 'exigías' | 'demandáis' | 'sugerís' | 'esperáis' | 'pedís'
V[tns=pres,num=pl,pers=3,val=1,mood=indic,type=volition,aspect=imperfective] -> 'quieren' | 'necesitan' | 'exigen' | 'demandan' | 'sugieren' | 'esperan' | 'piden'


#Pret
V[tns=pret,num=sg,pers=1,val=1,mood=indic,type=volition,aspect=perfective] -> 'quise' | 'necesité' | 'exigí' | 'demandé' | 'sugerí' | 'esperé' | 'pedí'
V[tns=pret,num=sg,pers=2,val=1,mood=indic,type=volition,aspect=perfective] -> 'quisiste' | 'necesitaste' | 'exigiste' | 'demandaste' | 'sugeriste' | 'esperaste' | 'pediste'
